<h1 class="text-center">Profil</h1>
<%= link_to "Voir le détail des compétences", skills_path, class: "text-center" %>
<br>
<br>
<h2><%= @user.email %></h2>
<div class="cards">
  <% @user_skills.each do |user_skill| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= user_skill.skill.name %></h2>
        <h3><%= user_skill.amount %> points</h3>
        <p><%= user_skill.level %></p>
      </div>
    </div>
  <% end %>
</div>
